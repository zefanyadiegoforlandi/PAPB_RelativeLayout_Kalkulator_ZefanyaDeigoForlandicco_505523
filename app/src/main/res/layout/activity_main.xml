<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/hasilKal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_utuh"
        android:layout_marginBottom="28dp"
        android:textAlignment="textEnd"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/hasilkal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/hasilKal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <LinearLayout
        android:id="@+id/layout_utuh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="23dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/b_khusus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputOperation"
                android:text="C"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_operasimtk"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputOperation"
                android:text="%"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_operasimtk"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputOperation"
                android:text="/"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/button6"
                style="@style/b_delete"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputDelete"
                android:text="del"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="7"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="8"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="9"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_operasimtk"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputOperation"
                android:text="*"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="4"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="5"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="6"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_operasimtk"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputOperation"
                android:text="-"
                android:textSize="40dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="1"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="2"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="3"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_operasimtk"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputOperation"
                android:text="+"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="inputNumber"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:onClick="makeDecimal"
                android:text="."
                android:textSize="35dp"
                android:textColor="@color/white"
                app:cornerRadius="36dp" />

            <Button
                style="@style/b_khusus"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:onClick="inputOperation"
                android:text="="
                android:textSize="40dp"
                app:cornerRadius="36dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
